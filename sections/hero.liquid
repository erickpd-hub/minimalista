{% comment %}
  Sección Hero - Banner Principal Editable
{% endcomment %}

<section class="relative px-4 py-24 mx-auto overflow-hidden max-w-7xl md:py-32" style="background-color: {{ section.settings.background_color }};">
  {% if section.settings.background_image %}
    <div class="absolute inset-0 z-0">
      <img 
        src="{{ section.settings.background_image | img_url: '1920x' }}" 
        alt="{{ section.settings.heading | escape }}"
        class="object-cover w-full h-full"
        style="opacity: {{ section.settings.image_opacity }};"
      >
      {% if section.settings.overlay_opacity > 0 %}
        <div class="absolute inset-0 bg-black" style="opacity: {{ section.settings.overlay_opacity }};"></div>
      {% endif %}
    </div>
  {% endif %}
  
  <div class="relative z-10 max-w-2xl">
    {% if section.settings.heading != blank %}
      <h1 class="mb-6" style="color: {{ section.settings.text_color }};">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="mb-8" style="color: {{ section.settings.text_color }};">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
    
    {% if section.settings.button_text != blank %}
      <a 
        href="{{ section.settings.button_link }}" 
        class="inline-flex items-center gap-2 px-6 py-3 text-white transition-colors bg-black rounded-lg hover:bg-neutral-800"
        style="background-color: {{ section.settings.button_color }};"
      >
        {{ section.settings.button_text }}
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    {% endif %}
  </div>
  
  {% if section.settings.show_gradient and section.settings.background_image == blank %}
    <div class="absolute top-0 right-0 w-1/2 h-full opacity-5">
      <div class="w-full h-full bg-gradient-to-l from-neutral-900 to-transparent"></div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Imagen de fondo"
    },
    {
      "type": "range",
      "id": "image_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Opacidad de la imagen",
      "default": 1
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 0.8,
      "step": 0.1,
      "label": "Opacidad de overlay oscuro",
      "default": 0
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Construye tu PC ideal"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Componentes de última generación y computadoras armadas para gaming, diseño y productividad. Calidad garantizada y envío rápido."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Ver productos"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Color del botón",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color de texto",
      "default": "#000000"
    },
    {
      "type": "checkbox",
      "id": "show_gradient",
      "label": "Mostrar gradiente decorativo",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}