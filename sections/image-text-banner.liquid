{% comment %}
  Sección de Banner con Imagen y Texto
{% endcomment %}

<section class="px-4 py-16 mx-auto max-w-7xl" style="background-color: {{ section.settings.background_color }};">
  <div class="grid gap-8 lg:grid-cols-2 lg:gap-12 items-center">
    {% if section.settings.layout == 'image_left' %}
      <div class="order-1 lg:order-1">
    {% else %}
      <div class="order-1 lg:order-2">
    {% endif %}
      {% if section.settings.image %}
        <div class="overflow-hidden rounded-lg aspect-square">
          <img 
            src="{{ section.settings.image | img_url: '800x800' }}" 
            alt="{{ section.settings.heading | escape }}"
            class="object-cover w-full h-full"
          >
        </div>
      {% else %}
        <div class="flex items-center justify-center bg-neutral-100 rounded-lg aspect-square">
          <svg class="w-24 h-24 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
      {% endif %}
    </div>

    {% if section.settings.layout == 'image_left' %}
      <div class="order-2 lg:order-2">
    {% else %}
      <div class="order-2 lg:order-1">
    {% endif %}
      {% if section.settings.heading != blank %}
        <h2 class="mb-4">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="mb-6 prose text-neutral-600">
          {{ section.settings.text }}
        </div>
      {% endif %}
      
      {% if section.settings.button_text != blank %}
        <a 
          href="{{ section.settings.button_link }}" 
          class="inline-block px-6 py-3 text-white transition-colors bg-black rounded-lg hover:bg-neutral-800"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Banner Imagen y Texto",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Diseño",
      "options": [
        {
          "value": "image_left",
          "label": "Imagen a la izquierda"
        },
        {
          "value": "image_right",
          "label": "Imagen a la derecha"
        }
      ],
      "default": "image_left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Título del Banner"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Texto",
      "default": "<p>Descripción del banner con información relevante.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Saber más"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Banner Imagen y Texto"
    }
  ]
}
{% endschema %}
