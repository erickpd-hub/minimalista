{% comment %}
  Sección de Lista de Colecciones
{% endcomment %}

<section class="px-4 py-16 mx-auto max-w-7xl" style="background-color: {{ section.settings.background_color }};">
  {% if section.settings.heading != blank %}
    <div class="mb-12 text-center">
      <h2 class="mb-2">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="text-neutral-600">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-{{ section.settings.columns }}">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      <a 
        href="{{ collection.url }}" 
        class="flex flex-col overflow-hidden transition-all bg-white border rounded-lg border-neutral-200 hover:shadow-lg group"
        {{ block.shopify_attributes }}
      >
        <div class="overflow-hidden bg-neutral-50 aspect-video">
          {% if block.settings.image %}
            <img 
              src="{{ block.settings.image | img_url: '600x400' }}" 
              alt="{{ block.settings.title | escape }}"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            >
          {% elsif collection.image %}
            <img 
              src="{{ collection.image | img_url: '600x400' }}" 
              alt="{{ collection.title | escape }}"
              class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
            >
          {% else %}
            <div class="flex items-center justify-center w-full h-full bg-neutral-100">
              <svg class="w-16 h-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
          {% endif %}
        </div>
        
        <div class="flex flex-col flex-1 p-6">
          <h3 class="mb-2">{{ block.settings.title | default: collection.title }}</h3>
          
          {% if block.settings.description != blank %}
            <p class="mb-4 text-neutral-600">{{ block.settings.description }}</p>
          {% elsif collection.description != blank %}
            <p class="mb-4 text-neutral-600">{{ collection.description | strip_html | truncate: 100 }}</p>
          {% endif %}
          
          <div class="flex items-center justify-between mt-auto">
            <span class="text-neutral-600">
              {{ collection.products_count }} productos
            </span>
            
            <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Lista de Colecciones",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Comprar por Categoría"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Explora nuestras colecciones"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Columnas en desktop",
      "default": 3
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Colección",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Colección"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título personalizado"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción personalizada"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen personalizada"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Lista de Colecciones"
    }
  ]
}
{% endschema %}
