{% comment %}
  Sección Principal de Artículo
{% endcomment %}

<article class="px-4 py-16 mx-auto max-w-4xl">
  <div class="mb-8">
    <div class="mb-4 text-neutral-500">
      {{ article.published_at | date: "%d %B %Y" }} • {{ article.author }}
    </div>
    
    <h1 class="mb-6">{{ article.title }}</h1>
    
    {% if article.image %}
      <div class="overflow-hidden rounded-lg aspect-video bg-neutral-50">
        <img 
          src="{{ article.image | img_url: '1200x800' }}" 
          alt="{{ article.title | escape }}"
          class="object-cover w-full h-full"
        >
      </div>
    {% endif %}
  </div>

  <div class="prose max-w-none">
    {{ article.content }}
  </div>

  <div class="mt-12">
    <a href="{{ blog.url }}" class="inline-flex items-center gap-2 text-neutral-600 hover:text-neutral-900">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Volver al blog
    </a>
  </div>
</article>

{% schema %}
{
  "name": "Main Article",
  "settings": [],
  "presets": [
    {
      "name": "Main Article"
    }
  ]
}
{% endschema %}
