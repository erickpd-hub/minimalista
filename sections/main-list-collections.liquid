{% comment %}
  Sección Principal de Lista de Colecciones
{% endcomment %}

<div class="px-4 py-16 mx-auto max-w-7xl">
  <div class="mb-12">
    <h1 class="mb-2">Todas las Categorías</h1>
    <p class="text-neutral-600">Explora nuestra selección completa de productos</p>
  </div>

  {% if collections.size > 0 %}
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {% for collection in collections %}
        {% unless collection.handle == 'frontpage' %}
          <a 
            href="{{ collection.url }}" 
            class="flex flex-col overflow-hidden transition-all bg-white border rounded-lg border-neutral-200 hover:shadow-lg group"
          >
            {% if collection.image %}
              <div class="overflow-hidden bg-neutral-50 aspect-video">
                <img 
                  src="{{ collection.image | img_url: '600x400' }}" 
                  alt="{{ collection.title | escape }}"
                  class="object-cover w-full h-full transition-transform duration-300 group-hover:scale-105"
                >
              </div>
            {% else %}
              <div class="flex items-center justify-center bg-neutral-100 aspect-video">
                <svg class="w-16 h-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
              </div>
            {% endif %}
            
            <div class="flex flex-col flex-1 p-6">
              <h2 class="mb-2">{{ collection.title }}</h2>
              
              {% if collection.description != blank %}
                <p class="mb-4 text-neutral-600 line-clamp-2">
                  {{ collection.description | strip_html }}
                </p>
              {% endif %}
              
              <div class="flex items-center justify-between mt-auto">
                <span class="text-neutral-600">
                  {{ collection.products_count }} 
                  {% if collection.products_count == 1 %}producto{% else %}productos{% endif %}
                </span>
                
                <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>
        {% endunless %}
      {% endfor %}
    </div>
  {% else %}
    <div class="py-16 text-center">
      <p class="text-neutral-600">No hay colecciones disponibles.</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Main List Collections",
  "settings": []
}
{% endschema %}
