{% comment %}
  Sección de Galería de Imágenes
{% endcomment %}

<section class="px-4 py-16 mx-auto max-w-7xl" style="background-color: {{ section.settings.background_color }};">
  {% if section.settings.heading != blank %}
    <div class="mb-12 text-center">
      <h2 class="mb-2">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="text-neutral-600">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-{{ section.settings.columns }}">
    {% for block in section.blocks %}
      <div class="relative overflow-hidden group aspect-square rounded-lg" {{ block.shopify_attributes }}>
        {% if block.settings.image %}
          <img 
            src="{{ block.settings.image | img_url: '600x600' }}" 
            alt="{{ block.settings.title | escape }}"
            class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-110"
          >
        {% else %}
          <div class="flex items-center justify-center w-full h-full bg-neutral-100">
            <svg class="w-16 h-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </div>
        {% endif %}
        
        {% if block.settings.title != blank or block.settings.description != blank %}
          <div class="absolute inset-0 flex flex-col items-center justify-center p-4 text-center transition-opacity bg-black/60 opacity-0 group-hover:opacity-100">
            {% if block.settings.title != blank %}
              <h3 class="mb-2 text-white">{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="text-white">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Galería",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Galería"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columnas en desktop",
      "default": 4
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descripción"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Galería"
    }
  ]
}
{% endschema %}
