{% comment %}
  Sección de Footer - Editable
{% endcomment %}

<footer class="px-4 py-16 mt-16 border-t bg-neutral-50 border-neutral-200">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-8 mb-12 md:grid-cols-2 lg:grid-cols-4">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'menu' %}
            <div {{ block.shopify_attributes }}>
              <h3 class="mb-4">{{ block.settings.heading }}</h3>
              <ul class="space-y-2">
                {% for link in linklists[block.settings.menu].links %}
                  <li>
                    <a href="{{ link.url }}" class="text-neutral-600 hover:text-neutral-900">
                      {{ link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </div>

          {% when 'text' %}
            <div {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h3 class="mb-4">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.text != blank %}
                <div class="text-neutral-600">
                  {{ block.settings.text }}
                </div>
              {% endif %}
            </div>

          {% when 'newsletter' %}
            <div {{ block.shopify_attributes }}>
              <h3 class="mb-4">{{ block.settings.heading }}</h3>
              {% if block.settings.text != blank %}
                <p class="mb-4 text-neutral-600">{{ block.settings.text }}</p>
              {% endif %}
              {% form 'customer', class: 'flex gap-2' %}
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input 
                  type="email" 
                  name="contact[email]" 
                  placeholder="Tu email"
                  class="flex-1 px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
                  required
                >
                <button 
                  type="submit"
                  class="px-4 py-2 text-white bg-black rounded-lg hover:bg-neutral-800"
                >
                  Suscribir
                </button>
              {% endform %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="flex flex-col items-center justify-between gap-4 pt-8 border-t border-neutral-200 md:flex-row">
      <p class="text-neutral-600">
        &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. Todos los derechos reservados.
      </p>
      
      {% if section.settings.show_payment_icons %}
        <div class="flex gap-2">
          <span class="text-neutral-600">Métodos de pago:</span>
          <!-- Iconos de pago aquí -->
        </div>
      {% endif %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Mostrar iconos de métodos de pago",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menú",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Título",
          "default": "Enlaces"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menú",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Texto",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Título"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Texto"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Título",
          "default": "Newsletter"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Texto",
          "default": "Recibe nuestras últimas ofertas y novedades"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "menu"
      },
      {
        "type": "menu"
      },
      {
        "type": "text"
      },
      {
        "type": "newsletter"
      }
    ]
  }
}
{% endschema %}
