{% comment %}
  Sección de Categorías - Grid de categorías editables
{% endcomment %}

<section class="px-4 py-16 mx-auto max-w-7xl" style="background-color: {{ section.settings.background_color }};">
  <div class="mb-12 text-center">
    {% if section.settings.heading != blank %}
      <h2 class="mb-2">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.subheading != blank %}
      <p class="text-neutral-600">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>
  
  <div class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-6">
    {% for block in section.blocks %}
      <a
        href="{{ block.settings.link }}"
        class="flex flex-col items-center gap-3 p-6 transition-all bg-white border rounded-lg border-neutral-200 hover:border-neutral-900 hover:shadow-sm"
        {{ block.shopify_attributes }}
      >
        {% if block.settings.icon_name != blank %}
          {% render 'icon', name: block.settings.icon_name, class: 'w-8 h-8' %}
        {% endif %}
        <span class="text-center">{{ block.settings.title }}</span>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Categorías",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Categorías"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtítulo",
      "default": "Encuentra los componentes perfectos para tu build"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "#f5f5f5"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoría",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Título",
          "default": "Categoría"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Enlace"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Icono",
          "options": [
            { "value": "cpu", "label": "CPU" },
            { "value": "memory", "label": "RAM" },
            { "value": "hdd", "label": "SSD" },
            { "value": "gpu", "label": "GPU" },
            { "value": "case", "label": "Gabinete" },
            { "value": "pc", "label": "PC Armada" }
          ],
          "default": "cpu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Categorías",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "PC Armadas",
            "icon_name": "pc"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Procesadores",
            "icon_name": "cpu"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Memoria RAM",
            "icon_name": "memory"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Gráficas",
            "icon_name": "gpu"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "SSD",
            "icon_name": "hdd"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Gabinetes",
            "icon_name": "case"
          }
        }
      ]
    }
  ]
}
{% endschema %}
