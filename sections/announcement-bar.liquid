{% if section.settings.show_announcement %}
  <div class="w-full overflow-hidden" style="background-color: {{ section.settings.background_color }};">
    <div class="announcement-bar-scroll py-2">
      <div class="announcement-bar-content flex items-center gap-8 whitespace-nowrap">
        {% for block in section.blocks %}
          <div class="flex items-center gap-2" {{ block.shopify_attributes }}>
            {% if block.settings.icon %}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: {{ section.settings.text_color }};">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            {% endif %}
            <a 
              href="{{ block.settings.link }}" 
              class="transition-opacity hover:opacity-80"
              style="color: {{ section.settings.text_color }};"
            >
              {{ block.settings.text }}
            </a>
          </div>
          
          <!-- Duplicado para efecto continuo -->
          <div class="flex items-center gap-2">
            {% if block.settings.icon %}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="color: {{ section.settings.text_color }};">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            {% endif %}
            <a 
              href="{{ block.settings.link }}" 
              class="transition-opacity hover:opacity-80"
              style="color: {{ section.settings.text_color }};"
            >
              {{ block.settings.text }}
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <style>
    .announcement-bar-scroll {
      position: relative;
    }

    .announcement-bar-content {
      display: inline-flex;
      animation: scroll-left {{ section.settings.scroll_speed }}s linear infinite;
    }

    @keyframes scroll-left {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }

    .announcement-bar-scroll:hover .announcement-bar-content {
      animation-play-state: paused;
    }
  </style>
{% endif %}

