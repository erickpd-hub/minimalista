{% comment %}
  Plantilla de Inicio de Sesión
{% endcomment %}

<div class="px-4 py-16 mx-auto max-w-md">
  <h1 class="mb-8 text-center">Iniciar Sesión</h1>

  {% form 'customer_login' %}
    {% if form.errors %}
      <div class="p-4 mb-6 border rounded-lg bg-red-50 border-red-200">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="space-y-4">
      <div>
        <label for="CustomerEmail" class="block mb-2">Email</label>
        <input 
          type="email" 
          name="customer[email]" 
          id="CustomerEmail" 
          autocomplete="email"
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <div>
        <label for="CustomerPassword" class="block mb-2">Contraseña</label>
        <input 
          type="password" 
          name="customer[password]" 
          id="CustomerPassword" 
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <button 
        type="submit" 
        class="w-full px-6 py-3 text-white bg-black rounded-lg hover:bg-neutral-800"
      >
        Iniciar Sesión
      </button>
    </div>

    <div class="mt-6 text-center">
      <a href="{{ routes.account_recover_url }}" class="text-neutral-600 hover:text-neutral-900">
        ¿Olvidaste tu contraseña?
      </a>
    </div>

    <div class="mt-4 text-center">
      <a href="{{ routes.account_register_url }}" class="text-neutral-600 hover:text-neutral-900">
        Crear cuenta
      </a>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Inicio de Sesión",
  "settings": []
}
{% endschema %}
