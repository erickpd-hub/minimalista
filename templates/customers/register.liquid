{% comment %}
  Plantilla de Registro
{% endcomment %}

<div class="px-4 py-16 mx-auto max-w-md">
  <h1 class="mb-8 text-center">Crear Cuenta</h1>

  {% form 'create_customer' %}
    {% if form.errors %}
      <div class="p-4 mb-6 border rounded-lg bg-red-50 border-red-200">
        {{ form.errors | default_errors }}
      </div>
    {% endif %}

    <div class="space-y-4">
      <div>
        <label for="FirstName" class="block mb-2">Nombre</label>
        <input 
          type="text" 
          name="customer[first_name]" 
          id="FirstName" 
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <div>
        <label for="LastName" class="block mb-2">Apellido</label>
        <input 
          type="text" 
          name="customer[last_name]" 
          id="LastName" 
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <div>
        <label for="Email" class="block mb-2">Email</label>
        <input 
          type="email" 
          name="customer[email]" 
          id="Email" 
          autocomplete="email"
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <div>
        <label for="CreatePassword" class="block mb-2">Contraseña</label>
        <input 
          type="password" 
          name="customer[password]" 
          id="CreatePassword" 
          class="w-full px-4 py-2 border rounded-lg border-neutral-300 focus:border-neutral-900 focus:outline-none"
          required
        >
      </div>

      <button 
        type="submit" 
        class="w-full px-6 py-3 text-white bg-black rounded-lg hover:bg-neutral-800"
      >
        Crear Cuenta
      </button>
    </div>

    <div class="mt-6 text-center">
      <a href="{{ routes.account_login_url }}" class="text-neutral-600 hover:text-neutral-900">
        ¿Ya tienes cuenta? Inicia sesión
      </a>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Registro",
  "settings": []
}
{% endschema %}
